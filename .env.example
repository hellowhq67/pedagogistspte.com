# PTE Speaking env sample
# No secrets committed. Copy to .env.local for local dev.

# Vercel Blob token for read/write (required for audio uploads)
VERCEL_BLOB_READ_WRITE_TOKEN=

# Transcription provider for speaking attempts: openai | none
# Set to "openai" to enable server-side Whisper transcription; defaults to "none"
AI_TRANSCRIBE_PROVIDER=none

# OpenAI API key (required for AI scoring / OpenAI Whisper transcription)
OPENAI_API_KEY=

# Google Gemini API key (required for Gemini-based AI scoring and fallback)
GOOGLE_GENERATIVE_AI_API_KEY=

# Vercel AI SDK API key (optional; reuses OPENAI_API_KEY or GOOGLE_GENERATIVE_AI_API_KEY if not set)
VERCEL_AI_API_KEY=

# PTE AI Scoring configuration
# Provider priority for task selection: comma-separated list of 'openai', 'gemini', 'vercel', 'heuristic'
# Default behavior: speaking/writing prioritize openai; reading/listening prioritize gemini
PTE_SCORING_PROVIDER_PRIORITY=

# Timeout for individual AI provider calls (milliseconds, default 8000)
PTE_SCORING_TIMEOUT_MS=8000

# Optional: override default models for Vercel AI SDK
VERCEL_AI_OPENAI_MODEL=openai:gpt-4o-mini
VERCEL_AI_GEMINI_MODEL=google:gemini-1.5-flash

# Database connection string
# Existing project already uses POSTGRES_URL or DATABASE_URL.
# Provide your production/local URL here if you prefer DATABASE_URL.
DATABASE_URL=postgres://user:pass@host:5432/db
